<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/iv_sun_splash"
        android:layout_width="@dimen/_120dp"
        android:layout_height="@dimen/_120dp"
        android:contentDescription="@string/imageview"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cloud_splash"
        app:layout_constraintEnd_toEndOf="@+id/iv_cloud_splash"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="@+id/iv_cloud_splash"
        app:layout_constraintTop_toTopOf="@+id/iv_cloud_splash"
        app:layout_constraintVertical_bias="0.492"
        app:srcCompat="@drawable/sun" />

    <ImageView
        android:id="@+id/iv_cloud_splash"
        android:layout_width="@dimen/_250dp"
        android:layout_height="@dimen/_250dp"
        android:contentDescription="@string/imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloud" />

</androidx.constraintlayout.widget.ConstraintLayout>